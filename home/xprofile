fi

# enviorment variables
export BROWSER=qutebrowser &
export EDITOR=vim &
export TERMINAL=kitty &
export DE=i3 &
export QT_STYLE_OVERRIDE=gtk2 &

# keyboard and mouse modifications, (swedish keyboard)
setxkbmap gb &
numlockx &
keynav &
unclutter &

# Visual bling
# compton --config ~/.compton.conf --backend glx --vsync opengl-swc --xrender-sync --xrender-sync-fence &
# compton --config ~/.compton.conf --vsync opengl -b &
# compton --config ~/.compton.conf --vsync opengl -b &
compton --config ~/.compton.conf &
# killall xiccd
# xiccd & # color correction
# xcalib -gc 0.8 -a -s 0 &

#messages
dunst -config .dunst/dunstrc &

#audio
#$(pulseaudio --kill ; pulseaudio --start) &

# applets
nm-applet &
pasystray &

# set wallpaper
# ./.fehbg &
# conky --conf .conkyleft.conkyrc &
# conky --conf .conkyright.conkyrc &
./bin/random-wallpaper &

# locker script
xautolock -time 15 -locker ~/bin/i3lock/lock-trans.sh &

