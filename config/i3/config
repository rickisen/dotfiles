# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

#super
set $mod Mod4

# polkit authentication agent, shows password inputs when apps require it
exec --no-startup-id lxpolkit

# touchpad two finger click
exec --no-startup-id xinput set-prop 15 338 0 1

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, if you need a lot of unicode glyphs or
# right-to-left text rendering, you should instead use pango for rendering and
# chose a FreeType font, such as:
# font pango:DejaVu Sans Mono 10
# font pango:Cantarell, 8
font pango:Source Code Pro Semibold, 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# size of floating windows
floating_minimum_size 350 x 200
# floating_maximum_size 1300 x 1020

# start a terminal
#bindsym $mod+Return exec gnome-terminal -- zsh -c "tmux"
bindsym $mod+Return exec gnome-terminal -- zsh -c "tmux"
# kill focused window
bindsym $mod+Shift+c kill

# start dmenu/rofi
#bindsym $mod+space exec dmenu_run
bindsym $mod+space exec rofi -show run

# apps
# bindsym $mod+a exec firefox
# bindsym $mod+a exec qutebrowser --backend webengine
bindsym $mod+a exec qutebrowser

#terminal-apps
bindsym $mod+s       exec gnome-terminal -- ranger
bindsym $mod+p       exec gnome-terminal -- htop
bindsym $mod+c       exec gnome-terminal -- cmus
bindsym $mod+m       exec gnome-terminal --class PulseMixerFloat -- pulsemixer
# bindsym $mod+Shift+m exec gnome-terminal -- alsamixer
bindsym $mod+n       exec gnome-terminal -- journalctl -f

# change rotation of current display (output) with xrandr
bindsym $mod+Ctrl+h  exec ~/bin/workspace-rotate left
bindsym $mod+Ctrl+j  exec ~/bin/workspace-rotate normal
bindsym $mod+Ctrl+k  exec ~/bin/workspace-rotate inverted
bindsym $mod+Ctrl+l  exec ~/bin/workspace-rotate right

# change wallpaper
bindsym $mod+w       exec ~/bin/random-wallpaper

#make active window transparent (toggles)
bindsym $mod+Shift+t exec ~/bin/transparent-active-window

#make active window's colors inverted (toggles)
bindsym $mod+Shift+i exec ~/bin/invert-active-window

# screenlock
bindsym $mod+Ctrl+Shift+l exec ~/bin/i3lock/lock-trans.sh

# Background processes
bindsym $mod+b       exec setxkbmap se
bindsym $mod+Shift+b exec setxkbmap gb

# Background processes
# bindsym $mod+i exec ~/bin/trackpad-toggle
bindsym $mod+i exec  pactl set-card-profile "alsa_card.pci-0000_00_1b.0" "output:iec958-stereo+input:analog-stereo"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left  focus left
bindsym $mod+Down  focus down
bindsym $mod+Up    focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left  move left
bindsym $mod+Shift+Down  move down
bindsym $mod+Shift+Up    move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+Shift+v split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+Shift+s layout stacking
bindsym $mod+Shift+w layout tabbed
bindsym $mod+e       layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+Tab focus mode_toggle

# focus the parent container
bindsym $mod+Shift+p focus parent

# focus the parent container
bindsym $mod+Ctrl+p focus child

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# reload the configuration file
bindsym $mod+Shift+Ctrl+q reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+q restart

# exit i3 (logs you out of your X session)
# bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+Shift+e exec "i3-msg exit"
bindsym $Ctrl+Alt+Backspace exec "pkill X"

# color class           border  backgr. text    indicator
client.focused          #bd93f9 #bd93f9 #21222c #ff79c6
client.focused_inactive #6272a4 #6272a4 #f8f8f2 #44475a
client.unfocused        #1f1f1f #1f1f1f #f8f8f2 #44475a
client.urgent           #ff5555 #ff5555 #f8f8f2 #f8f8f2
client.placeholder      #1f1f1f #1f1f1f #f1fa8c #44475a

# default border width
new_float  normal 3
new_window pixel 3

# These bindings trigger as soon as you enter the resize mode
mode "resize" {
  bindsym $mod+h resize shrink width  10 px or 10 ppt
  bindsym $mod+j resize grow   height 10 px or 10 ppt
  bindsym $mod+k resize shrink height 10 px or 10 ppt
  bindsym $mod+l resize grow   width  10 px or 10 ppt
  bindsym Left   resize shrink width  10 px or 10 ppt
  bindsym Down   resize grow   height 10 px or 10 ppt
  bindsym Up     resize shrink height 10 px or 10 ppt
  bindsym Right  resize grow   width  10 px or 10 ppt
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  status_command i3status -c .config/i3/i3status.cfg
    colors {
      background #1f1f1f
        statusline #f8f8f2
        separator #8be9fd

        focused_workspace  #bd93f9 #bd93f9 #1f1f1f
        active_workspace   #44475a #44475a #f8f8f2
        inactive_workspace #6272a4 #6272a4 #1f1f1f
        urgent_workspace   #ff5555 #ff5555 #1f1f1f
    }
  mode hide
  hidden_state hide
  # modifier Mod1
}

focus_follows_mouse no
default_orientation auto

# gaps outer 10
gaps inner 10

# feature 54 specific
# gaps outer horizontal 270
# workspace 3 gaps outer horizontal 0
# workspace 2 gaps outer horizontal 0
# workspace 1 gaps outer vertical 0

# bindsym $mod+g gaps outer current horizontal set 270
bindsym $mod+Shift+g gaps inner current set 0
bindsym $mod+Ctrl+Shift+g gaps inner current set 10

# bindsym $mod+Ctrl+g gaps inner current set 10
# bindsym $mod+Ctrl+Shift+g gaps inner current set 0; border pixel 2 ; gaps outer current horizontal set 0

# bindsym $mod+Shift+g floating toggle, resize set 1300px 1020px, move position center
bindsym $mod+g floating toggle, resize set 1300px 1020px, move position center

bindsym $mod+y border normal 2
bindsym $mod+Shift+y border pixel 2

# PiP mode
bindsym $mod+shift+f [title="__focused__"] floating toggle, move position 1310 710, resize set 600 340
for_window [instance="PiP"] floating enable, move position 1310 710, resize set 600 340
assign [instance="PiP"] â†’ output primary

for_window [class=".*"] title_format <span> %class</span> | <b>%title</b>

for_window [instance="PulseMixerFloat"] floating enable
for_window [instance="PulseMixerFloat"] move position 1310 845
for_window [instance="PulseMixerFloat"] resize set 600 200

for_window [instance="PulseMixerFloat"] floating enable, move position 1310 845, resize set 600 200
for_window [instance="MpvFloat"] floating enable
for_window [instance="QuteFloat"] floating enable
for_window [class="Godot" instance="Godot_Engine"] floating enable
for_window [class="Emulator"] floating disable

# Window title format
for_window [class=".*"] title_format <span size="large">%class</span> | <b>%title</b>

# focus_on_window_activation <smart|urgent|focus|none>
focus_on_window_activation urgent

# smart_borders on
exec --no-startup-id /usr/lib/gnome-settings-daemon/gsd-xsettings

exec_always --no-startup-id gnome-power-manager

exec --no-startup-id aa-notify -p -s 1 -w 60 -f /var/log/audit/audit.log

exec --no-startup-id lxpolkit
